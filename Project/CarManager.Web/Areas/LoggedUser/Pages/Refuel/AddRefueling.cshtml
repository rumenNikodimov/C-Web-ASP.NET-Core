@page "{id}"
@model AddRefuelingModel
@{
}
<h2>Add New Refueling</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="LoggedUser" asp-page="/Refuel/AddRefueling" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="@Model.Quantity"></label>
                <input asp-for="@Model.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CurrnetKilometers"></label>
                <input asp-for="@Model.CurrnetKilometers" class="form-control" />
                <span asp-validation-for="@Model.CurrnetKilometers" class="text-danger"></span>
            </div>

            <a href="/LoggedUser/Vehicles/Index" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-success">Add Refueling</button>
        </form>
    </div>
</div>